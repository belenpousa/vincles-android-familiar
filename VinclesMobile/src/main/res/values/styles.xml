<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--<item name="android:homeAsUpIndicator">@drawable/logo_bcn</item>-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="android:homeAsUpIndicator">@drawable/logo_bcn</item>-->
    </style>

    <style name="captionOnly">
        <item name="android:background">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/menu_item_size</item>
    </style>

    <style name="video_view">
        <item name="android:background">#FFFFFF</item>
    </style>
    <!--
      <item name="android:thumb">@drawable/customswitchselector</item>
      <item name="android:track">@drawable/custom_track</item>
    -->
    <style name="SwitchStyle">
        <!--<item name="android:showText">true</item>-->
        <item name="android:thumb">@drawable/customswitchselector</item>
        <item name="android:track">@drawable/custom_track2</item>
        <item name="android:switchTextAppearance">@style/SwitchTextAppearance</item>
        <item name="android:switchMinWidth">@dimen/switch_size_w_x2</item>
    </style>

    <style name="switchLayout" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:visibility">visible</item>
        <item name="android:layout_width">@dimen/switch_size_w_x2</item>
    </style>

    <style name="switchBackground" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:visibility">visible</item>
        <item name="android:layout_width">@dimen/switch_size_w_x2</item>
    </style>

    <style name="switchTextLeft">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="switchTextRight">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="TextDefault">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextLarge">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonRed">
        <item name="android:background">@drawable/my_btn_rojo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonBlack">
        <item name="android:background">@drawable/button_background_black</item>
        <item name="android:textColor">@color/state_list</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonGris">
        <item name="android:background">@drawable/my_btn_gris</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextDef">
        <item name="android:background">@drawable/edittext_background_def</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <item name="design_layout_snackbar_include" type="layout" tools:override="true">
        @layout/snackbar_customized
    </item>
</resources>
