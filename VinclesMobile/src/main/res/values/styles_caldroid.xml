<resources>
    <!-- Vincles theme. -->
    <style name="CaldroidVincles" parent="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/CaldroidDefaultVinclesCalendarViewLayout</item>
        <item name="styleCaldroidMonthName">@style/CaldroidDefaultVinclesMonthName</item>
        <item name="styleCaldroidNormalCell">@style/CaldroidDefaultVinclesNormalCell</item>
        <item name="styleCaldroidSquareCell">@style/CaldroidDefaultVinclesSquareCell</item>
        <item name="styleCaldroidGridView">@style/CaldroidDefaultVinclesGridView</item>

        <item name="styleCaldroidLeftArrow">@style/CaldroidVinclesLeftButton</item>
        <item name="styleCaldroidRightArrow">@style/CaldroidVinclesRightButton</item>
    </style>

    <style name="CaldroidDefaultVinclesCalendarViewLayout">
        <item name="android:background">@color/black1</item>
    </style>

    <style name="CaldroidDefaultVinclesMonthName" parent="CaldroidDefaultMonthName">
        <item name="android:textColor">@color/caldroid_white</item>
    </style>

    <style name="CaldroidDefaultVinclesGridView" parent="CaldroidDefaultGridView">
        <item name="android:background">@color/white</item>
    </style>

    <style name="CaldroidDefaultVinclesCell" parent="CaldroidDefaultCell">
        <item name="android:background">@drawable/caldroid_cell_bg</item>
    </style>

    <style name="CaldroidDefaultVinclesNormalCell" parent="CaldroidDefaultVinclesCell">
        <!--<item name="android:padding">5dp</item>-->
    </style>

    <style name="CaldroidDefaultVinclesSquareCell" parent="CaldroidDefaultVinclesCell" />


    <style name="CaldroidVinclesLeftButton" parent="CaldroidDefaultArrowButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/left_arrow</item>
        <!--<item name="android:backgroundTint">@color/white</item>-->
    </style>

    <style name="CaldroidVinclesRightButton" parent="CaldroidDefaultArrowButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/right_arrow</item>
        <!--<item name="android:backgroundTint">@color/white</item>-->
    </style>
</resources>
