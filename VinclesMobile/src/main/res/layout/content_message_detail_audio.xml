<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/audio_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_large"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_download"
            android:onClick="downloadAudio"
            />

        <ImageView
            android:id="@+id/audio_image_void"
            android:layout_width="@dimen/audio_message_button_size"
            android:layout_height="match_parent"
            android:layout_above="@+id/fraPlay"
            android:src="@drawable/play"
            android:layout_centerInParent="true"
            android:tint="@color/red"
            />

        <ImageView
            android:id="@+id/audio_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/audio_image_padding"
            android:layout_above="@+id/fraPlay"
            android:src="@drawable/icon_audio"
            android:visibility="gone"
            android:layout_gravity="center_horizontal|center_vertical"
            />

        <LinearLayout
            android:id="@+id/fraPlay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/audio_message_button_size"
            android:background="@color/black"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/layoutButtons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/imgPlay"
                    android:layout_width="@dimen/audio_message_button_size"
                    android:layout_height="@dimen/audio_message_button_size"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/icon_play_white" />

                <ImageView
                    android:id="@+id/imgPause"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:padding="@dimen/padding_medium"
                    android:src="@drawable/icon_pausa"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:layout_toRightOf="@id/layoutButtons"
                    android:layout_toLeftOf="@id/txDuration"
                    android:padding="@dimen/padding_medium"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@color/gray1"
                    android:progressTint="@color/red"
                    />

                <TextView
                    android:id="@+id/newmessage_title_progress"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/padding_medium"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/menu_text_size"
                    android:background="@color/gray1"
                    android:text="00:00"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
