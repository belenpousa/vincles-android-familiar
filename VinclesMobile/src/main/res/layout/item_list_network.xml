<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding_medium"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_message_photo"
        android:src="@drawable/user"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/window_background"
        android:layout_width="@dimen/network_user_size_image"
        android:layout_height="@dimen/network_user_size_image" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_medium"
        android:layout_weight="1">

        <cat.bcn.vincles.lib.widget.AkkuratTextView
            android:id="@+id/item_network_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/menu_text_size"
            android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_network_check"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_check_24_dp"
        />

</LinearLayout>