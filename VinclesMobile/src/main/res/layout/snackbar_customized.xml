<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_error"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/snackbar_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_mensajes"
            android:padding="@dimen/padding_small"
            android:tint="@color/white"
            android:visibility="gone"
            />
        <cat.bcn.vincles.lib.widget.AkkuratTextView
            android:id="@+id/snackbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:text="@string/error_register"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <cat.bcn.vincles.mobile.widget.AkkuratButton
            android:id="@+id/snackbar_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            style="@style/ButtonBlack"
            android:text="@string/close"
            android:visibility="gone"
            />
        <cat.bcn.vincles.mobile.widget.AkkuratButton
            android:id="@+id/snackbar_action2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            style="@style/ButtonBlack"
            android:text="@string/close"
            android:visibility="gone"
            />
    </LinearLayout>


</LinearLayout>